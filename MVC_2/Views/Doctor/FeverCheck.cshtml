
@{
    ViewBag.Title = "Fever Check";
}


<main>
    <h2>@ViewBag.Title</h2>
    <form asp-action="FeverCheck" method="post" class="form">
        <fieldset>
            <div>
                <label for="name"><strong>Name</strong></label>
                <input type="text" id="name" name="name">
            </div>
            <div>
                <label for="temperature"><strong>Temperature</strong></label>
                <input type="number" id="temp" name="temperature" required>
                <div>
                    <input type="radio" id="celsiusbt" name="radiobt" value="celsius">
                    <label for="celsiusbt">Celsius</label>
                    <input type="radio" id="fahrenheitbt" name="radiobt" value="fahrenheit">
                    <label for="fahrenheitbt">Fahrenheit</label>
                </div>
              
            </div>
            <button id="submit" type="submit" onclick="alert('Successfully submitted!')">Submit</button>
        </fieldset>
    </form>
    <div>
        @{
         <p>@ViewBag.Message</p>
        }
    </div>
</main>