@model UsersRolesViewModel

<div>
    <h2>@Model.Title</h2>
    <h4>@Model.Description</h4>
</div>

<div>
    @if (Model.ApplicationUsers.Count() > 0)
    {
        <table class="users table">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>SSN</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>BirthDate</th>
                    <th>Email</th>
                    <th>Age</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.ApplicationUsers)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.SSN</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.BirthDate</td>
                        <td>@user.Email</td>
                        <td>@user.Age</td>
                        <td>
                            <a asp-action="UserRoles" asp-route-userID="@user.Id">Roles</a>
                        </td>
                        <td>
                            <a asp-action="DeleteUser" asp-route-userID="@user.Id">Delete User</a>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    }
</div>