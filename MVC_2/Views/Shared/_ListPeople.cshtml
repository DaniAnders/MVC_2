@model MVC_2.ViewModels.PeopleViewModel
<main>

    <h4>Partial View - Users List</h4>
    <div>
    <table>
        @if (Model.Persons.Count != 0)
        {
            @foreach (var person in Model.Persons)
            {
                <tr>
                    <td>@person.PersonId</td>
                    <td>@person.Name</td>
                    <td>@person.Phone</td>
                    <td>@person.City</td>
                </tr>
            }
          }
        @if(Model.Persons.Count == 0)
        {
            <td> The list is empty! </td>
        }
    </table>
    </div>
      
</main>
