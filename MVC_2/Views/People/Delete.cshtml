@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MVC_2.ViewModels.PeopleViewModel

@{
    string[] headers = { "ID", "Name", "Phone", "City", "CheckBox" };
}

<main>

    <div>
        <form asp-controller="People" asp-action="Delete" method="post">
            <table>
                <tr>
                    @if (Model.Persons.Count != 0)
                    {
                        @foreach (var header in headers)
                        {
                            <th>@header</th>
                        }

                    }

                </tr>

                @if (Model.Persons.Count != 0)
                {
                    @foreach (var person in Model.Persons)
                    {
                        <tr>
                            <td>@person.PersonId</td>
                            <td>@person.Name</td>
                            <td>@person.Phone</td>
                            <td>@person.City</td>
                            <td><input type="checkbox" name="personIds" id="@person.PersonId" value="@person.PersonId" />
                            <td>

                        </tr>
                    }

                }
                else
                {
                    <p>List is Empty</p>
                }

            </table>
            @if (Model.Persons.Count != 0)
            {
                <input type="submit" value="Delete from list selected ids" />
            }


        </form>

    </div>
</main>
