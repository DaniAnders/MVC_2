
@model Cities_ViewModel

<div>
    <h3>Edit City</h3>
    <form asp-controller="Cities" asp-action="Edit" method="post">
        <fieldset>
            <div>
                <label asp-for="@Model.City.Id"></label>
                <input class="form-input" asp-for="@Model.City.Id" readonly="readonly">
                <span asp-validation-for="@Model.City.Id"> </span>
            </div>
            <div>
                <label asp-for="@Model.City.CityName"></label>
                <input class="form-input" asp-for="@Model.City.CityName">
                <span asp-validation-for="@Model.City.CityName"> </span>
            </div>
            <div>
                <label>Select country:</label>
                <select asp-for="@Model.City.CountryId" asp-items="Model.CountriesList"></select>
            </div>

            <button id="submit" type="submit">Save</button>
        </fieldset>
    </form>
</div>
